<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/postagens/edit">
            <input type="hidden" name="id" id="id" value="{{postagens._id}}">
            <input type="text" name="titulo" id="titulo" placeholder="Titulo" class="form-control" value="{{postagens.titulo}}">
            <input type="text" name="slug" id="slug" placeholder="Slug" class="form-control mt-4" value="{{postagens.slug}}">
            <input type="text" name="descricao" id="descricao" placeholder="Descrição" class="form-control mt-4" value="{{postagens.descricao}}">
            <textarea name="conteudo" id="conteudo" class="form-control mt-4" placeholder="Conteúdo" cols="30" rows="10">{{postagens.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-control">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">Editar</button>
        </form>
    </div>
</div>