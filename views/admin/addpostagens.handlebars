{{#each erro}}
    <div class="alert alert-danger">{{text}}</div>

{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/postagens/nova">
            <input type="text" name="titulo" id="titulo" placeholder="Titulo" class="form-control" required>
            <input type="text" name="slug" id="slug" placeholder="Slug" class="form-control mt-4">
            <input type="text" name="descricao" id="descricao" placeholder="Descrição" class="form-control mt-4" required>
            <textarea name="conteudo" id="conteudo" class="form-control mt-4" placeholder="Conteúdo" cols="30" rows="10" required></textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-control">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">Enviar</button>
        </form>
    </div>
</div>